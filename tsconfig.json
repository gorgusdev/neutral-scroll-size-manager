{
	"compilerOptions": {
		"target": "es5",
		"module": "es6",
		"moduleResolution": "node",
		"lib": ["dom", "scripthost", "es5", "es2015.iterable"],
		"importHelpers": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"skipLibCheck": true,
		"removeComments": true,
		"sourceMap": true,
		"declaration": true,
		"outDir": "esm/"
	},
	"files": [
		"./src/index.ts"
	]
}